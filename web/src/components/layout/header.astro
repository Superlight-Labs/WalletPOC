---
import {Icon} from 'astro-icon';
import WaitlistButton from '../shared/waitlist-button';
---

<header
  id="page-header"
  class="z-20 fixed top-0 flex items-center justify-center sm:justify-between bg-transparent sm:h-24 h-16 w-full px-16 py-4 border-b-white text-white border-b border-transparent">
  <div class="flex-row font-thin space-x-16 text-lg hidden sm:flex">
    <a href="#">Personal</a>
    <a href="#">Business</a>
  </div>
  <a class="flex h-20 items-center gap-3 hover:!text-default" href="#">
    <h1 class="sr-only">Superlight</h1>
    <Icon name="logomark" class="h-12 sm:hidden lg:block block sm:h-16" />
    <Icon name="logo-solo" class="h-12 hidden sm:block lg:hidden sm:h-16" />
  </a>
  <div class="hidden md:block"><WaitlistButton client:idle /></div>
</header>
<div class="z-10 backdrop-blur-lg fixed sm:h-24 h-16 top-0 w-full"></div>
